{
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "lib": ["esnext"],
    "baseUrl": "./src",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["src/**/*"]
}
